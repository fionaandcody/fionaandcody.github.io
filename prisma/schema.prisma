generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Vacation {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  title        String
  destination  String
  startDate    DateTime
  endDate      DateTime
  shortSummary String
  description  String
  coverImage   String
  gallery      String   // Storing as JSON string
  tags         String   // Storing as JSON string
  status       String   // "draft" | "published"
  featured     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Wedding {
  id             Int      @id @default(autoincrement())
  heroImage      String
  heroTitle      String   @default("The Wedding Day")
  heroSubtitle   String   @default("October 7, 2023 â€¢ Anaheim, CA")
  highlights     String   // JSON: [{ time: "4:00 PM", title: "Ceremony", description: "..." }]
  videoUrl       String
  gallery        String   // JSON: ["/img1.jpg", "/img2.jpg"]
  updatedAt      DateTime @updatedAt
}
